<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.android.minuf.cs478_project3_part1.MainActivity">

    <TextView
        android:id="@+id/hotelsTextView"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Clicking the below button opens up the receiver that responds to Hotels Intent!"
        android:editable="false"
        android:layout_alignParentStart="true"
        />
    <Button
        android:id="@+id/hotelsButton"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hotelsTextView"
        android:text="Hotels Receiver Button" />

    <TextView
        android:id="@+id/restaurantsTextView"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Clicking the below button opens up the receiver that responds to REstaurats Intent!"
        android:editable="false"
        android:layout_toRightOf="@+id/hotelsTextView"
        />
    <Button
        android:id="@+id/restaurantsButton"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Restaurants Receiver Button"
        android:layout_alignTop="@+id/hotelsButton"
        android:layout_toRightOf="@+id/hotelsButton" />

</RelativeLayout>